<%- include('partials/header.ejs') %>

<body class="text-center">

    <main>

        <!-- <h2>Your Sports Selection Is: </h2> -->

        <div class="container">

            <% if(cartObj.length < 1){ %>
                <br/><h2>Your Shopping Cart Is Empty</h2>
            <% } %>

            <% if(cartObj.length > 0 ){ %>

                <br/><h2><strong>Your Shopping Cart</strong></h2>
                <br/><br>
                
                <div class="list-group" style="width: 30%; margin: auto;">
                    <a class="list-group-item list-group-item-action" id="subtotal">Subtotal: $<%= (total).toFixed(2) %></a>
                    <a class="list-group-item list-group-item-action" id="total">Total: $<%= (total+(total*0.0975)).toFixed(2) %></a>
                </div>
                <br/>
                <a href="/cart" class="btn btn-warning" id="updateCart">Update cart</a><br/><br/>
                <a href="/cart/checkout" class="btn btn-success" id="checkoutBtn">Proceed to checkout</a>
                <br>
                    <label>Input Username:</label><input type="text" id="username">
              
            

                <% for(let i = 0; i < cartObj.length; i++){
                
                        if(i % 2 == 0){ %>
                            <div class="row">
                    <% } %>

                        <div class="col-lg card-columns productCart">
                            <div class="card" style="width: 18rem;">
                                <h5 class="card-title sportName"><%= cartObj[i].productName %></h5>
                                <img class="img-fluid sportImage" src="<%= cartObj[i].productImagePath %>" class="card-img-top" alt="Product Image">
                                <div class="card-body">
                                    <p class="card-text sportPrice">Price: $<%= cartObj[i].productPrice %></p>
                                    <a href="/cart" class="btn btn-danger deletecartbtn" id="<%= i %>">Remove From Cart</a>
                                    <br/><span><label for="quantity">Quantity:</label><input type="number" id="<%= i %>" name="quantity" class="qtyBox" value="<%= cartObj[i].productAmount %>" min="1" max="20"></span>
                                </div>
                            </div>
                        </div>

                    <% if(i % 2 != 0){ %>
                            </div>
                    <% }
                } %>
            <% } %>

        </div>

    </main>

<%- include('partials/footer.ejs') %>

</body>
</html>